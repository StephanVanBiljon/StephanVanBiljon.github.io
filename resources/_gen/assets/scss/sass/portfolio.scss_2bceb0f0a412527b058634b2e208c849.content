.portfolio-container {
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  width: 50%;
  height: 30em; }

.project-details, .card-container {
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: space-between; }

.project-details {
  border: 1px solid black; }

.card-1, .card-2, .card-3 {
  border: 1px solid black;
  margin: 0em 2em 0em 0em;
  height: 28%; }
